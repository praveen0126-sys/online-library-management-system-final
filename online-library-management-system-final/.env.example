# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=jdbc:mysql://mysql:3306/library_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
DB_USERNAME=library_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_256_bits_long

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
FRONTEND_PORT=3000
BACKEND_PORT=8081
MYSQL_PORT=3307
NGINX_PORT=80
SSL_PORT=443

# Docker Images (GitHub Container Registry)
BACKEND_IMAGE=ghcr.io/praveen0126-sys/online-library-management-system-final/backend:latest
FRONTEND_IMAGE=ghcr.io/praveen0126-sys/online-library-management-system-final/frontend:latest

# Deployment Environment
ENVIRONMENT=production
